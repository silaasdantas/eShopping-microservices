    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>ac200d2b-e3de-4237-837e-4e2a3745a041</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <DockerfileContext>..\..\..</DockerfileContext>
